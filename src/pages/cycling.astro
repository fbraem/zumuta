---
import Layout from '../layouts/Layout.astro'

const posts = await Astro.glob('../pages/cycling/*.mdx')
posts.sort((a, b) => a.frontmatter.date > b.frontmatter.date ? -1 : 1)
const recentPosts = posts.slice(0, 5)
---

<Layout
	title="Zumuta! &bull; Cycling"
	frontmatter={{
		title: 'Zumuta! Blog',
		subtitle: "That's the way to do IT",
		description: "It's just a hill, get over it..."
	}}
>
	<div class="container mx-auto p-4">
		{ posts.map(post => (
			<a href={post.url}>
				<h2 class="text-2xl font-bold">{ post.frontmatter.title }</h2>
			</a>
			<p class="p-4 text-gray-600 flex items-center">
				{ post.frontmatter.description }
			</p>
		))}
	</div>
</Layout>
